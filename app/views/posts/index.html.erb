<h1>Blog Post</h1>

   <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
   <p>
   <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
   <%= submit_tag "Search"%>
   </p>
  <% end %>
   
<% @posts.each do |post| %>
   <div class="well">
        <h3><%= post.title %></h3>
        <p><%=post.body%></p>
        <%= link_to "Read More", post_path(post), :class => 'btn btn-default' %>
   </div>
   

 
  <% if @posts.present? %>
    <p><%= render plain: params[:post] %> </p>
   <%else%>
     <p>  There are no posts containing the terms(s) <%= params[:serach]%>.</p>
 <% end %> 

  <% end %>