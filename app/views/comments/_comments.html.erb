<h3>Comments</h3>

<% @post.comments.each do |comment|%>

  <div class="well">
    <p>: <%= comment.body %>
    <% if current_user.admin? %>
       <%= link_to "[X]", [comment.post, comment], 
                         method: :delete,
                         data: {confirm: 'Are you sure?'} %></p>
    <%# else not an admin user %>
    
    <% end %>
  </div>

<% end %>
