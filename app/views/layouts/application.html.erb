<!DOCTYPE html>
<html>
  <head>
    <title>PostAds</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="container">
    <div align="right">
      <% if signed_in? %>
        Signed in as: <%= link_to current_user.email %> <br>
      <%= link_to 'Sign out', sign_out_path, method: :delete %>
      <% else %>
        <%= link_to 'Sign in', sign_in_path %>
       <% end %>
    </div>

    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>
  </div>
<nav clsaa="navbar navbar-default">
     <div class="container">
     <div class="navbar-header"> 
     <button type="button" class="navbar-toggle collapsed"
     data-toggle="collapse" data-target="#navbar"
     aria-expanded="false" aria-controls="navbar">

     <span class="sr-only">Toggle navigation</span>
     <span class="icon-bar"></span>
     <span class="icon-bar"></span>
     <span class="icon-bar"></span>
     </button>
     <a class="navbar-brand"  href="#">PostAds</a>
     </div>
     <div id="navbar" class="collapse navbar-collapse">
     <ul class="nav navbar-nav">
    <li><%= link_to "Home", home_path %></li>
    <li><%= link_to "Transactions" %></li>
    <li><%= link_to "Recruitments" %></li>
    <li><%= link_to "Others" %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
    <li><%= link_to "Create Post", new_post_path %></li>
    </ul>

    </div>
    </div>
    </nav>
<div class="container">

  

  <%= yield %>
 
  </body>
</html>
